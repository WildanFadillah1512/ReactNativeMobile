generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk Produk
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float    // Kita akan ubah 'Rp 50.000' jadi 50000
  description String
  imageUrl    String?
  category    String?  // Saya tambahkan dari data Anda
  rating      Float?   // Saya tambahkan dari data Anda
  reviews     Int?     // Saya tambahkan dari data Anda
  trending    Boolean  @default(false) // Saya tambahkan dari data Anda
  location    String?  // Saya tambahkan dari data Anda
  period      String?  // Saya tambahkan dari data Anda
  createdAt   DateTime @default(now())

  // --- Relasi ke Seller ---
  sellerId Int
  seller   Seller @relation(fields: [sellerId], references: [id])
}

// Model untuk User (Belum kita pakai, tapi tidak apa-apa)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

// --- MODEL BARU UNTUK SELLER ---
model Seller {
  id           Int      @id // Kita akan pakai ID dari data Anda (101, 102, dll)
  name         String
  avatar       String?
  bio          String?
  rating       Float?
  itemsRented  Int?
  
  // Relasi: Satu Seller punya BANYAK Produk
  products     Product[]
}